<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="222.0" prefWidth="387.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.demo.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="fontSizeTextField" />
   <Slider fx:id="fontSizeSlider" blockIncrement="1.0" majorTickUnit="2.0" max="30.0" min="10.0" minorTickCount="1" showTickLabels="true" value="10.0" />
   <TextField fx:id="usernameTextField" promptText="enter username">
      <font>
         <Font size="10.0" />
      </font></TextField>
   <PasswordField fx:id="passwordField" promptText="enter password">
      <font>
         <Font size="10.0" />
      </font>
   </PasswordField>

    <Button fx:id="signinButton" disable="true" onAction="#onSigninButtonClick" text="Signin" />
</VBox>
